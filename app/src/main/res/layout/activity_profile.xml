<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ProfileActivity">
    <android.support.v4.widget.NestedScrollView
        android:id="@+id/profileScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:focusable="false"
        android:focusableInTouchMode="false">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/coverProfile"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:src="@drawable/ic_background"
                android:scaleType="center"
                />
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profilePicture"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/sample_pic"
                android:scaleType="centerCrop"
                android:layout_gravity="right"
                android:layout_marginEnd="@dimen/padding_s"
                app:civ_border_color="@color/colorWhite"
                app:civ_border_width="1dp"
                app:layout_constraintTop_toBottomOf="@id/coverProfile"
                app:layout_constraintBottom_toBottomOf="@id/coverProfile"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/margin_m"/>
            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Juan Dela Cruz"
                app:layout_constraintBottom_toBottomOf="@id/coverProfile"
                app:layout_constraintStart_toEndOf="@id/profilePicture"
                android:textSize="20sp"
                android:layout_marginStart="@dimen/margin_m"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:layout_marginBottom="@dimen/padding_s"
                />
            <TextView
                android:id="@+id/userEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="juandelacruz@gmail.com"
                app:layout_constraintTop_toBottomOf="@id/coverProfile"
                app:layout_constraintStart_toEndOf="@id/profilePicture"
                android:layout_marginStart="@dimen/margin_m"
                android:layout_marginTop="@dimen/margin_s"/>
            <TextView
                android:id="@+id/userNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="09151722093"
                app:layout_constraintTop_toBottomOf="@id/userEmail"
                app:layout_constraintStart_toStartOf="@id/userEmail"
                android:layout_marginTop="@dimen/margin_xs"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/profileRecycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/userNumber"
                android:layout_marginTop="@dimen/margin_m"
                android:nestedScrollingEnabled="false"
                android:focusableInTouchMode="false"
                android:focusable="false"
                />



        </android.support.constraint.ConstraintLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.constraint.ConstraintLayout>