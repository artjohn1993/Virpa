<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.RatingFragment">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v4.widget.NestedScrollView
            android:id="@+id/ratingScroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="false"
            android:focusableInTouchMode="false">
            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <android.support.constraint.ConstraintLayout
                    android:id="@+id/ratingGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/lightgray"
                    android:padding="@dimen/padding_m"
                    >
                    <TextView
                        android:id="@+id/totalRatingNumber"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:text="5.0"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:background="@drawable/circle_border_primary"
                        android:textAlignment="center"
                        android:paddingTop="15dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Your rating from 5 out of 5"
                        app:layout_constraintTop_toBottomOf="@id/totalRatingBar"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="@dimen/margin_s"
                        android:textColor="@color/colorPrimary"
                        android:textSize="12sp"
                        />
                    <RatingBar
                        android:id="@+id/totalRatingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Widget.AppCompat.RatingBar.Small"
                        android:progressTint="@color/yellow"
                        android:rating="5"
                        app:layout_constraintTop_toBottomOf="@id/totalRatingNumber"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="@dimen/margin_s"
                        />
                </android.support.constraint.ConstraintLayout>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/ratingRecycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/ratingGroup"
                    android:focusableInTouchMode="false"
                    android:focusable="false"
                    android:nestedScrollingEnabled="false"
                    />
            </android.support.constraint.ConstraintLayout>
        </android.support.v4.widget.NestedScrollView>
    </android.support.constraint.ConstraintLayout>
</FrameLayout>