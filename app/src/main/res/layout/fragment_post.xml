<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.PostFragment">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/menu1">
            <RadioGroup
                android:id="@+id/postType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                >
                <RadioButton
                    android:id="@+id/lf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LF (Looking for)"
                    android:layout_marginEnd="8dp"
                    />
                <RadioButton
                    android:id="@+id/announce"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Announcement"
                    />
            </RadioGroup>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PHP"
                    android:layout_marginEnd="8dp"
                    android:textColor="@color/black"/>
                <EditText
                    android:id="@+id/postBudget"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/amount_to_offer"
                    android:background="@color/transparent"
                    android:inputType="phone"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/menu2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            >
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Post"
                android:textAllCaps="false"
                android:background="@color/colorPrimary"
                android:textSize="@dimen/material_text_body1"
                android:textColor="@color/colorWhite"
                />
            <TextView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Photo"
                android:textSize="@dimen/material_text_caption"
                android:padding="@dimen/padding_s"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tag Category"
                android:textSize="@dimen/material_text_caption"
                android:padding="@dimen/padding_s"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Expires On"
                android:textSize="@dimen/material_text_caption"
                android:padding="@dimen/padding_s"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Post Radius"
                android:textSize="@dimen/material_text_caption"
                android:padding="@dimen/padding_s"
                />
        </LinearLayout>

        <EditText
            android:id="@+id/postBody"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/transparent"
            app:layout_constraintTop_toBottomOf="@id/menu1"
            app:layout_constraintBottom_toTopOf="@id/menu2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:inputType="textMultiLine"
            android:gravity="top"
            android:padding="@dimen/padding_s"
           />

    </android.support.constraint.ConstraintLayout>
</FrameLayout>