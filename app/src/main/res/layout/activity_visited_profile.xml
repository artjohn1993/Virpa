<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".activity.VisitedProfileActivity">
    <android.support.v4.widget.NestedScrollView
        android:id="@+id/visitedScroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:focusableInTouchMode="false">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/coverProfile"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:src="@drawable/ic_background"
                android:scaleType="center"
                />
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profilePicture"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/ic_person"
                android:scaleType="centerCrop"
                android:layout_gravity="right"
                android:layout_marginEnd="@dimen/padding_s"
                app:civ_border_color="@color/colorWhite"
                app:civ_border_width="1dp"
                app:layout_constraintTop_toBottomOf="@id/coverProfile"
                app:layout_constraintBottom_toBottomOf="@id/coverProfile"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@drawable/circle_gray"
                android:layout_marginStart="@dimen/margin_m"/>
            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Juan Dela Cruz"
                app:layout_constraintBottom_toBottomOf="@id/coverProfile"
                app:layout_constraintStart_toEndOf="@id/profilePicture"
                android:textSize="20sp"
                android:layout_marginStart="@dimen/margin_m"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:layout_marginBottom="@dimen/padding_s"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:padding="@dimen/padding_s">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_email"
                        android:tint="@color/colorWhite"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="message"
                        android:textColor="@color/colorWhite"
                        android:textSize="10sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginStart="@dimen/margin_m"
                    >
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_follow"
                        android:tint="@color/colorWhite"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="follow"
                        android:textColor="@color/colorWhite"
                        android:textSize="10sp"/>
                </LinearLayout>

            </LinearLayout>
            <RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.AppCompat.RatingBar.Small"
                app:layout_constraintTop_toBottomOf="@id/coverProfile"
                app:layout_constraintStart_toEndOf="@id/profilePicture"
                android:layout_marginStart="@dimen/margin_m"
                android:layout_marginTop="@dimen/margin_s"
                android:rating="4"
                android:progressTint="@color/yellow"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ratings(100)"
                app:layout_constraintTop_toBottomOf="@id/ratingBar"
                app:layout_constraintStart_toStartOf="@id/ratingBar"
                android:textSize="10sp"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/visitedProfileRecycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/profilePicture"
                android:layout_marginTop="@dimen/margin_m"
                android:nestedScrollingEnabled="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                />
        </android.support.constraint.ConstraintLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.constraint.ConstraintLayout>