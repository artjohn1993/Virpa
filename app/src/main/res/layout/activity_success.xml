<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SuccessActivity"
    android:background="@color/colorPrimary"
    android:id="@+id/successLayout">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/padding_m">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_up_vote"
            android:tint="@color/colorWhite"
            android:background="@drawable/circle_white_border"
            android:padding="@dimen/padding_m"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Congratulations"
            android:textColor="@color/colorWhite"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/margin_l"
            />
        <TextView
            android:id="@+id/nameSuccess"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User name"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/margin_l"
            />
        <TextView
            android:id="@+id/emailSuccess"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="sample@mail.com"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"
            android:textAlignment="center"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TAP TO LOGIN"
        android:textColor="@color/colorWhite"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/margin_xl"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/margin_m"
        />
</android.support.constraint.ConstraintLayout>